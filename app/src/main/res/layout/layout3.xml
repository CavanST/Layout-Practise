<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i1"
        android:src="@drawable/die_0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i2"
        android:src="@drawable/die_1"
        android:layout_toRightOf="@+id/i1"
        android:layout_toEndOf="@+id/i1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i3"
        android:src="@drawable/die_2"
        android:layout_toRightOf="@+id/i2"
        android:layout_toEndOf="@+id/i2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i4"
        android:src="@drawable/die_3"
        android:layout_below="@+id/i1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i5"
        android:src="@drawable/die_4"
        android:layout_below="@+id/i2"
        android:layout_alignLeft="@id/i2"
        android:layout_alignStart="@id/i2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/i6"
        android:src="@drawable/die_5"
        android:layout_below="@+id/i3"
        android:layout_alignLeft="@id/i3"
        android:layout_alignStart="@id/i3" />

</RelativeLayout>
